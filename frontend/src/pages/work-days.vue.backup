<script setup>
import { ref } from 'vue'
import PageHeader from '../components/PageHeader.vue'

const loading = ref(false)

const workDays = ref([
  {
    id: 1,
    date: '2024/01/15',
    workers: 12,
    hours: 8,
    description: 'أعمال البناء الأساسية',
    status: 'completed'
  },
  {
    id: 2,
    date: '2024/01/16',
    workers: 10,
    hours: 8,
    description: 'أعمال الكهرباء',
    status: 'completed'
  },
  {
    id: 3,
    date: '2024/01/17',
    workers: 15,
    hours: 6,
    description: 'أعمال السباكة',
    status: 'inprogress'
  }
])

const headers = [
  { title: 'التاريخ', key: 'date', align: 'start' },
  { title: 'عدد العمال', key: 'workers', align: 'center' },
  { title: 'ساعات العمل', key: 'hours', align: 'center' },
  { title: 'الوصف', key: 'description', align: 'center' },
  { title: 'الحالة', key: 'status', align: 'center' },
  { title: 'الإجراءات', key: 'actions', align: 'center', sortable: false }
]

const formatDate = (date) => {
  return new Date(date).toLocaleDateString('ar-SA')
}

const getStatusColor = (status) => {
  const colors = {
    completed: 'success',
    inprogress: 'warning',
    pending: 'info'
  }
  return colors[status] || 'grey'
}

const getStatusText = (status) => {
  const texts = {
    completed: 'مكتمل',
    inprogress: 'قيد التنفيذ',
    pending: 'معلق'
  }
  return texts[status] || status
}

// Dialog state
const showAddDialog = ref(false)
const valid = ref(false)
const form = ref(null)

// Work day form data
const workDayForm = ref({
  location: '',
  formNumber: '',
  workPeriodFrom: '',
  workPeriodTo: '',
  day: '',
  workers: '',
  date: '',
  description: ''
})

// Days list
const days = ['السبت', 'الأحد', 'الاثنين', 'الثلاثاء', 'الأربعاء', 'الخميس', 'الجمعة']

// Open dialog
const openDialog = () => {
  showAddDialog.value = true
}

// Close dialog
const closeDialog = () => {
  showAddDialog.value = false
  resetForm()
}

// Reset form
const resetForm = () => {
  workDayForm.value = {
    location: '',
    formNumber: '',
    workPeriodFrom: '',
    workPeriodTo: '',
    day: '',
    workers: '',
    date: '',
    description: ''
  }
  if (form.value) {
    form.value.reset()
  }
}

// Save work day
const saveWorkDay = () => {
  console.log('Saving work day:', workDayForm.value)
  closeDialog()
}
</script>

